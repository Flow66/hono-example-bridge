<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="HonoExampleBridge"
        xmlns="http://camel.apache.org/schema/spring">

        <dataFormats>
            <json id="map" library="Jackson" unmarshalTypeName="java.util.Map" />
        </dataFormats>

        <route id="store">
            <from uri="amqp:telemetry/DEFAULT_TENANT"/>

            <unmarshal ref="map"/>

            <to uri="bean:metricsProcessor"/>
            <to uri="influxdb:influxDbConnectionBean?databaseName=payload&amp;retentionPolicy=autogen"/>
        </route>

    </camelContext>

</beans>
